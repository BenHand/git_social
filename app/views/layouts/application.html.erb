<!DOCTYPE html>
<html>
<head>
  <title>Git_Social</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
  <header>
    <nav>
    <div class="nav-wrapper light-green darken-3">
      <a href="/" class="brand-logo logo-font">Git_Social</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><%= link_to "Forums", forums_path %></li>
        <% if current_user %>
          <li>
            <%= link_to "#{current_user.name.titleize}",
                profile_main_path(current_user.id) %>
          </li>
          <li>
            <%= link_to "Log out",
                destroy_user_session_path(current_user.id),
                method: 'delete' %>
          </li>
        <% else %>
          <li>
            <%= link_to "Login", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  </header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <%= javascript_include_tag 'bin/materialize.min.js' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
